# Environment Variables
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://api.medtrack.com
NEXT_PUBLIC_APP_URL=https://medtrack.com

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/medtrack

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=https://medtrack.com

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Security
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# API Keys (Use proper secrets management in production)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# SENTRY_DSN=your-sentry-dsn
# ANALYTICS_ID=your-analytics-id